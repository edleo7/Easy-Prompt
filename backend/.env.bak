# 数据库配置
DATABASE_URL="file:./dev.db"

# 服务器配置
PORT=3001
NODE_ENV=development

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# 向量数据库配置
VECTOR_DB_PROVIDER=pinecone # pinecone, weaviate
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=easyprompt

WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-api-key
WEAVIATE_CLASS_NAME=Document

# 文件解析配置
PDF_PARSER_ENABLED=true
PDF_PARSER_LIBRARY=pdf-parse
WORD_PARSER_ENABLED=true
WORD_PARSER_LIBRARY=mammoth
EXCEL_PARSER_ENABLED=true
EXCEL_PARSER_LIBRARY=xlsx
PPT_PARSER_ENABLED=true
PPT_PARSER_LIBRARY=pptx2json

# 支付网关配置
STRIPE_ENABLED=true
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

PAYPAL_ENABLED=true
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

ALIPAY_ENABLED=true
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key
ALIPAY_PUBLIC_KEY=your_alipay_public_key
ALIPAY_GATEWAY=https://openapi.alipay.com/gateway.do

WECHAT_ENABLED=true
WECHAT_APP_ID=your_wechat_app_id
WECHAT_MCH_ID=your_wechat_mch_id
WECHAT_API_KEY=your_wechat_api_key
WECHAT_CERT_PATH=./certs/wechat_cert.pem

# 缓存配置
CACHE_TYPE=memory # memory, redis, file
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_FILE_PATH=./cache
CACHE_MAX_FILE_SIZE=10485760

# 监控配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log
MAX_LOG_SIZE=10485760
MAX_LOG_FILES=5
ENABLE_METRICS=true
METRICS_INTERVAL=60000

# 批量处理配置
BATCH_SIZE=10
MAX_CONCURRENCY=5

# 前端URL
FRONTEND_URL=http://localhost:3000

# DeepSeek API配置
DEEPSEEK_API_KEY=sk-f443ecb4d4194aa0bdb009d1c32d7f9b
DEEPSEEK_VISION_MODEL=deepseek-vl-7b-chat

# OCR配置
OCR_ENABLED=true
OCR_MAX_FILE_SIZE=10485760
OCR_SUPPORTED_FORMATS=image/png,image/jpeg,image/jpg,image/bmp,image/gif,image/tiff,image/webp,image/heif,image/heic